<Page x:Class="SplinterTools.Tests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SplinterTools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tests">

    <Grid>
        <Button x:Name="btnTest" Content="Test" VerticalAlignment="Top" HorizontalAlignment="Left"  Width="50" Height="25"  Margin="0,0,0,0" Click="btnTest_Click"></Button>
        <DataGrid x:Name="dbGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,40,0,0"/>

    </Grid>
</Page>
