<Window x:Name="SplinterWindow" x:Class="SplinterTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplinterTools"
        mc:Ignorable="d" FontSize="17" Loaded="Window_Loaded"
        Title="Splinter Rating" Height="550" Width="1100" Background="DarkGray" Grid.IsSharedSizeScope="True" UseLayoutRounding="True" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" MinWidth="1100" MaxWidth="1100" MinHeight="550" MaxHeight="550" WindowStyle="ThreeDBorderWindow" BorderThickness="1,1,1,1" ResizeMode="NoResize">

    <Grid x:Name="SplinterGid" Background="DarkGray" HorizontalAlignment="Center" Width="1100" Height="490" VerticalAlignment="Top">
        <ListView Name="SplinterList" HorizontalAlignment="Center" Width="1050" FontSize="15" FontFamily="Arial" Margin="15,15,15,40" FontWeight="Normal" BorderThickness="2,2,2,2" RenderTransformOrigin="0.505,0.428">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"  Width="150" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Rating" Width="100" DisplayMemberBinding="{Binding Rating}" />
                    <GridViewColumn Header="CP" Width="100" DisplayMemberBinding="{Binding CollectionPower}" />
                    <GridViewColumn Header="Quest" Width="100" DisplayMemberBinding="{Binding total_items}" />
                    <GridViewColumn Header="Completed" Width="100" DisplayMemberBinding="{Binding completed_items}" />
                    <GridViewColumn Header="Start" Width="190" DisplayMemberBinding="{Binding created_date}" />
                    <GridViewColumn Header="Finish" Width="190" DisplayMemberBinding="{Binding claim_date}" />
                    <GridViewColumn Header="Rewards" Width="100" DisplayMemberBinding="{Binding RewardQty}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnReload" Content="Automatic Refresh" Height="30" Width="193" 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                Click="btnRefresh_Click"  
                Margin="25,455,882,2">
        </Button>
        <Button x:Name="btnAutoStop" Content="Stop" 
                Margin="222,456,798,0" VerticalAlignment="Top" 
                Height="30" Width="80" Click="btnAutoStop_Click"/>

    </Grid>
</Window>
